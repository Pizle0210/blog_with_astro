---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import error from '../images/error-404.png';
---

<Layout title="404 - Page Not Found">
  <div class="flex flex-col items-center mx-auto justify-center">
    <Image src={error} height={400} width={400} alt="404 image" class="mt-10" />
    <h1 class="text-5xl">Page not found</h1>
    <p class="2xl mb-10">
      Sorry, we could not find the page you are looking for.
    </p>
    <a
      href="/"
      class="inline-block transition-all duration-200 ease-in-out bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
    >
      Go Back Home
    </a>
  </div>
</Layout>
