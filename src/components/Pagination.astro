---
const { currentPage, totalPages } = Astro.props;
---

<div class="flex justify-between mt-10">
  <a
    href={currentPage > 1 ? '/articles?page=' + (currentPage - 1) : '#'}
    class={`inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg ${currentPage <= 1 ? 'opacity-50 cursor-not-allowed' : ''}`}
    aria-disabled={currentPage <= 1 ? 'true' : 'false'}
  >
    Previous
  </a>
  <a
    href={currentPage < totalPages
      ? '/articles?page=' + (currentPage + 1)
      : '#'}
    class={`inline-block bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg ${currentPage >= totalPages ? 'opacity-50 cursor-not-allowed' : ''}`}
    aria-disabled={currentPage >= totalPages ? 'true' : 'false'}
  >
    Next
  </a>
</div>
