---
import { formatDate } from '../utils';
import type { CollectionEntry } from 'astro:content';

const { article } = Astro.props;

type Props = {
  article: CollectionEntry<'blog'>;
};
---

<div class="relative inline-block w-full cursor-pointer">
  <a href={'/articles/' + article.slug}>
    <img
      src={'/images/' + article.data.image}
      alt="Article Image"
      class="w-full rounded-3xl h-auto"
    />

    <div
      class="absolute py-4  px-1.5 inset-0 flex flex-col items-center justify-center bg-black opacity-80 hover:opacity-75 transition duration-300 ease-in-out text-white text-center rounded-2xl"
    >
      <div>
        <h2
          class="font-bold antialiased text-2xl md:text-2xl max-lg:text-center"
        >
          {article.data.title}
        </h2>
        <p class="text-sm sm:text-lg md:text-xl font-semibold mt-4">
          {formatDate(article.data.pubDate)}
        </p>

        <!-- Tags with rounded border -->
        <div class="flex mt-4 justify-center">
          {
            article.data.tags.map((tag: string) => (
              <span class="px-2 py-1 border text-white rounded-full text-xs mr-2">
                {tag}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
